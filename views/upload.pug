include partials/header

h1 Upload File
form(action='/upload', method='POST', enctype='multipart/form-data')
  .form-group
    label(for='image') Select image to upload
    input.form-control(type='file', id='image', name='image', accept='image/*')
  +formButton('Upload', 'submit', 'btn-success', 'save')

if error
  div.alert.alert-danger= error

if success
  div.alert.alert-success= success

include partials/footer
