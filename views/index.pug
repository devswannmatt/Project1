include partials/header

h1 Pages
ul.list-group#pages-list
  each page in pages
    li.list-group-item.d-flex.justify-content-between.align-items-center(data-id=page._id)
      a(href=`/page/${page._id}`) #{page.title}
      .button-bar
        form(action=`/delete/${page._id}`, method='POST', class='mr-2')
          button.btn.btn-danger(type='submit')
            i.fa.fa-trash
        a(href=`/edit/${page._id}`)
          button.btn.btn-primary(type='button').btn-edit
            i.fa.fa-edit

include partials/footer
