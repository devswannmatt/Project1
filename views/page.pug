include partials/header

div.pull-right
  if user && user.role === 'admin'
    a(href=`/pages/edit/${page._id}`)
      +formButton('Edit', 'submit', 'btn-primary pull-right', 'edit')

span.text-muted #{page.category.name} / #{page.title}

div.content
  != page.content

  block content

include partials/footer