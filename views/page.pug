include partials/header

div.pull-right
    if user && user.role === 'admin'
        a.btn.btn-primary(href=`/pages/edit/${page._id}`)
            i.fa.fa-edit

h2= page.title

if page.category
  span.text-muted Category: #{page.category.name}

div.content
  != page.content

block content


p= page

include partials/footer
