include partials/header

h1 Template List

+iframeModalButton('/templates/add', 'lg')

if templates.length
  ul.list-group
    each template in templates
      li.list-group-item
        a(href=`/templates/edit/${template._id}`) #{template.name}
        span.text-muted &mdash; #{template.description}
else
  p No templates found.

include partials/footer
