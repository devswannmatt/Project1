include partials/header

h1 Account Management
form(action='/account', method='POST')
  div.form-group
    label(for='firstName') First Name:
    input.form-control(type='text', id='firstName', name='firstName', value=user.firstName)
  div.form-group
    label(for='lastName') Last Name:
    input.form-control(type='text', id='lastName', name='lastName', value=user.lastName)
  div.form-group
    label(for='email') Email:
    input.form-control(type='email', id='email', name='email', value=user.email, required)
  div.form-group
    button.btn.btn-success(type='submit')
      i.fa.fa-save

include partials/footer
