include partials/header

h1 Edit Page
form(action=`/edit/${page._id}`, method='POST')
  div.form-group
    label(for='title') Title:
    input.form-control(type='text', id='title', name='title', value=page.title, required)
  div.form-group
    label(for='content') Content:
    textarea.form-control(id='content', name='content', rows='5', required)= page.content
  div.form-group
    button.btn.btn-success(type='submit')
      i.fa.fa-save
a(href='/')
  button.btn.btn-secondary(type='button').btn-back
    i.fa.fa-arrow-left

include partials/footer
