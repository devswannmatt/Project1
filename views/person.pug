include partials/header

block content
  h1 Create Person
  form(action="/api/person", method="post")
    table.table
      tr
        td
          +formInput('username', 'text', 'Username') 
      tr
        td
          +formInput('title', 'text', 'Title') 
      tr
        td
          +formInput('fname', 'text', 'Fname') 
      tr
        td
          +formInput('sname', 'text', 'Sname') 
      tr
        td
          +formInput('dob', 'text', 'Dob') 
      tr
        td
          +formInput('email', 'text', 'Email') 
      tr
        td
          +formInput('admin', 'text', 'Admin') 
          +formInput('verified', 'text', 'Verified') 
          +formInput('posts', 'text', 'Posts') 
          +formInput('rank', 'text', 'Rank') 
          +formInput('exp', 'text', 'Exp') 
      tr
        td
          +formInput('0', 'text', '0') 
          +formInput('1', 'text', '1') 
          +formInput('2', 'text', '2') 
      tr
        td
          +formInput('street', 'text', 'Street') 
          +formInput('city', 'text', 'City') 
          +formInput('zip', 'text', 'Zip') 
      tr
        td
          +formInput('createdAt', 'text', 'Createdat') 
      tr
        td
          +formButton('Save Changes', 'submit', 'btn-success pull-right', 'save') 

  
include partials/footer